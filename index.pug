mixin title(eng, chi)
    div(class="title-box")
        h2(class="title")=eng
        h1=chi
        img(src="image/03_line.png", alt="蛋糕")
mixin product-box(img, tit2, text)
    div(class="title-box")
        a(href="#")
            img(src="image/" + img + ".png", alt="產品 照片")
            hr
            h2=tit2
            p=text
